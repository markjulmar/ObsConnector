<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.julmar.propresenter-obs-bridge</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/ProPresenterObsBridge</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>/usr/local/bin</string>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <true/>
    
    <key>StandardOutPath</key>
    <string>/usr/local/var/log/propresenter-obs-bridge.log</string>
    
    <key>StandardErrorPath</key>
    <string>/usr/local/var/log/propresenter-obs-bridge.error.log</string>
    
    <key>ThrottleInterval</key>
    <integer>10</integer>
</dict>
</plist>
